# configs/shapes/ShipmentOOG.shape.ttl
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix hvdc: <https://hvdc.example.org/ns#> .

hvdc:ShipmentOOGShape a sh:NodeShape ;
  sh:targetClass hvdc:Shipment ;
  sh:sparql [
    sh:message "OOG는 길이/폭/높이/중량/COG 필수" ;
    sh:select """
      SELECT ?this WHERE {
        ?this hvdc:isOOG true .
        FILTER NOT EXISTS { ?this hvdc:length ?l . ?this hvdc:width ?w .
                            ?this hvdc:height ?h . ?this hvdc:weight ?gw .
                            ?this hvdc:centerOfGravity ?cg . }
      }
    """ ;
  ] .
