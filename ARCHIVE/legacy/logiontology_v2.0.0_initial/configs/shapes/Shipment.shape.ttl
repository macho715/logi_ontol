# configs/shapes/Shipment.shape.ttl
@prefix sh:   <http://www.w3.org/ns/shacl#> .
@prefix hvdc: <https://hvdc.example.org/ns#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .

hvdc:ShipmentShape a sh:NodeShape ;
  sh:targetClass hvdc:Shipment ;
  sh:property [
    sh:path hvdc:hasHVDCCode ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path hvdc:containsItem ;
    sh:minCount 1 ;
  ] ;
  sh:property [
    sh:path hvdc:hasVendor ;
    sh:minCount 1 ;
  ] .
